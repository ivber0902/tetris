                        <p class="koop__total-score">суммарное количество очков:</p>
                        <p class="koop__total-value">0</p>
                    </div>                    
                </div>
            </div>
            <div class="back">
                <p class="link_back">Назад</p>
            </div>
        </div>
    </main>
    <script src="/js/menu/statistics.js"></script>
{% endblock%}