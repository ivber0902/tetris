{% extends "base.html.twig" %}

{% block title %}Multiplayer{% endblock %}
{% block style %}<link rel="stylesheet" href="/css/multiplayer.css"/>{% endblock %}
{% block content %}
<body>
<main class="main">
        <img class="logo" src="/images/logo.png" alt="logo">
        <div class="wrapper-game">
            <div class="wrapper-main-field">
                <p class="player_name">Никита</p>
                <div class="main-field">
                    <div class="game__buffer"> 
                        <p class="title">Буффер</p>
                        <div class="buffer-wrapper">
                            <img class="buffer__figure" src="" alt="figure">
                        </div>
                    </div>
                        <div class="border-game">
                            <canvas id="game">    
                            </canvas>
                        </div>
                    <div class="next__figure">
                        <p class="title">Следующие</p>
                        <div class="wrapper-figures">
                            <img class="figure"  src="" alt="figure">
                            <img class="figure"  src="" alt="figure">
                            <img class="figure"  src="" alt="figure">
                            <img class="figure"  src="" alt="figure">               
                        </div>
                    </div>
                </div>
                <div class="wrapper-field">    
                    <div class="score-wrapper">
                        <p class="title-score">счет:</p>
                        <p class="game__score"></p>
                        <p class="title-level">уровень:</p>
                        <p class="game__level"></p>
                    </div>
                </div>
            </div>
            <div class="palyers-list">
                <div class="other-player">
                    <p class="player__username">Иван</p>
                    <img class="player__field" src="/images/fields/other_player/large.png">
                    <p class="player__score">200</p>
                </div>
                <div class="other-player">
                    <p class="player__username">Петр</p>
                    <img class="player__field" src="/images/fields/other_player/large.png">
                    <p class="player__score">200</p>
                </div>
                <div class="other-player">
                    <p class="player__username">Николай</p>
                    <img class="player__field" src="/images/fields/other_player/large.png">
                    <p class="player__score">200</p>
                </div>
            </div>
        </div>
    </main>
</body>
<script src="/js/game/game-mode.js"></script>
<script src="/js/game/game-end.js"></script>
<script src="/js/game/player.js"></script>
<script src="/js/game/interface.js"></script>
<script src="/js/game/figures.js"></script>
<script src="/js/game/images.js"></script>
<script src="/js/game/game.js"></script>
{% endblock %}