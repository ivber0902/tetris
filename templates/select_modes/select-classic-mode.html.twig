{% extends "base.html.twig" %}

{% block title %}
	solo classic mode
{% endblock %}
{% block style %}
	<link rel="stylesheet" href="/css/select.css"/><link rel="stylesheet" href="/css/mini-profile.css"/>
{% endblock %}
{% block script %}
	<script src="/js/game_modes/game_mode_size.js"></script>
	<script src="/js/menu/mini-profile.js"></script>
{% endblock %}
{% block content %}
	<div class="bg bg_dark">
		<div class="header">
			<img src="/images/settings.png" alt="settings" class="settings"/>
			<img src="/images/logo.png" alt="logo" class="logo"/>
			<div class="profile">
				{% if not user or not user.login %}
					<a href="{{ path('register') }}">
						<div class="profile">
							<p class="profile__nickname">{{user.login ?? 'славянин'}}</p>
							<img src="/images/avatar-placeholder.png" alt="avatar" class="profile__avatar">
						</div>
					</a>
				{% else %}
					<div class="profile">
						<p class="profile__nickname">{{user.login ?? 'славянин'}}</p>
						<img src="/images/avatar-placeholder.png" alt="avatar" class="profile__avatar">
					</div>
				{% endif %}
			</div>
		</div>
		<div class="select">
			<a href="/select_solo_mode">
				<div class="back">
					<p class="back__button">
						назад
					</p>
				</div>
			</a>
			<div class="links">
				<div class="link">
					<div class="link__text">
						<p class="link__title">
							холоп
						</p>
						<p class="link__subtitle">
							маленький размер поля
						</p>
					</div>
				</div>
				<div class="link">
					<div class="link__text">
						<p class="link__title">
							крестьянин
						</p>
						<p class="link__subtitle">
							классический размер поля
						</p>
					</div>
				</div>
				<div class="link">
					<div class="link__text">
						<p class="link__title">
							боярин
						</p>
						<p class="link__subtitle">
							большой размер поля
						</p>
					</div>
				</div>
			</div>
		</div>
		{% include 'mini-profile.html.twig' %}
	</div>	
{% endblock %}
