{% extends "base.html.twig" %}

{% block title %}
	multiplayer mode
{% endblock %}
{% block style %}
	<link rel="stylesheet" href="/css/select.css"/>
	<link rel="stylesheet" href="/css/mini-profile.css"/>
	<link rel="stylesheet" href="/css/header.css"/>
{% endblock %}
{% block content %}
	<div class="header">
		{% include 'header.html.twig' %}
	</div>
	<div class="select">
		<a href="/menu" class="back-button-link">
					<h1>
						назад
					</h1>
				</a>
		<div class="links">
			<a href="/lobby" class="link custom link_with-image">
				<div class="img-placeholder">
					<img src="/images/custom.png" alt="custom" class="link__image">
				</div>
				<div class="link__text">
					<p class="link__title custom__title">
						создать лобби
					</p>
					<p class="link__subtitle custom__subtitle">
						кастомизируй игру и сразись с друзьями
					</p>
				</div>
			</a>
			<a href="/join" class="link listing link_with-image">
				<div class="img-placeholder">
					<img src="/images/listing.png" alt="listing" class="link__image">
				</div>
				<div class="link__text">
					<p class="link__title listing__title">
						войти в лобби
					</p>
					<p class="link__subtitle listing__subtitle">сразись с друзьями на их правилах
					</p>
				</div>
			</a>
		</div>
	</div>
	{% include 'mini-profile.html.twig' %}
	<script src="/js/menu/mini-profile.js"></script>
{% endblock %}
